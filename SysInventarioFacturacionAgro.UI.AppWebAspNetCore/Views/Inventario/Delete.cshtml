@model SysInventarioFacturacionAgro.EntidadesDeNegocio.Inventario

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="m-0 font-weight-bold text-primary" style="font-size: 1.5rem;">Eliminar Ajuste de Inventario</h1>
    </div>
    <div class="card-body">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Detalles)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Detalles)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Diferencia)
            </dt>
            @if (Model.Diferencia == 1)
            {
                <dd class="col-sm-10">
                    AUMENTAR
                </dd>
            }
            else if (Model.Diferencia == 2)
            {
                <dd class="col-sm-10">
                    DISMINUIR
                </dd>
            }
            else
            {
                <dd class="col-sm-10"> </dd>
            }
        </dl>

        @using (Html.BeginForm("Delete", "Inventario", new { IdInventario = Model.IdInventario }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro que desea eliminar?');" style="margin-left: 10px;" disabled>
                <i class="fas fa-trash"></i> Eliminar
            </button>

            <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index")'" style="margin-left: 10px;">
                <i class="fas fa-times"></i> Cancelar
            </button>
        }
    </div>
</div>
