@model IEnumerable<SysInventarioFacturacionAgro.EntidadesDeNegocio.Producto>

@{
    ViewData["Title"] = "Index";
    int numPage = 1;
    int numRegistros = 0;
    int numRegistrosPorPage = 10;
    int[] tops = { 10, 20, 50, 100, 500, 1000, 10000, -1 };
    int topActual = Convert.ToInt32(ViewBag.Top);
    List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Proveedor> proveedores = ViewBag.Proveedor as List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Proveedor>;
    List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Categoria> categorias = ViewBag.Categoria as List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Categoria>;
    List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Marca> marcas = ViewBag.Marca as List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Marca>;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="m-0 font-weight-bold text-primary" style="font-size: 1.5rem;">Buscar Producto</h1>
    </div>
    <div class="card-body">
        <div class="row ml-4">
            <div class="col-md-12">
                <form asp-action="Index">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Codigo</label>
                                <input type="text" class="form-control" name="codigo" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nombre Producto</label>
                                <input type="text" class="form-control" name="nombre" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Seleccionar Proveedor</label>
                                <select name="IdProveedor" class="form-control">
                                    <option selected value="0">SELECCIONAR</option>
                                    @foreach (var item in proveedores)
                                    {
                                        <option value="@item.IdProveedor">@item.Nombre</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Seleccionar Categoria</label>
                                <select name="IdCategoria" class="form-control">
                                    <option selected value="0">SELECCIONAR</option>
                                    @foreach (var item in categorias)
                                    {
                                        <option value="@item.IdCategoria">@item.Nombre</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Seleccionar Marca</label>
                                <select name="IdMarca" class="form-control">
                                    <option selected value="0">SELECCIONAR</option>
                                    @foreach (var item in marcas)
                                    {
                                        <option value="@item.IdMarca">@item.Nombre</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                        
                    <div class="form-group" style="margin-top: 10px;">
                        <button type="submit" class="btn btn-purple" style="background-color: #0074D9; color: white;">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <button type="button" class="btn btn-success" onclick="window.location.href='@Url.Action("Create")'">
                            <i class="fas fa-plus"></i> Agregar
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="table-responsive paginationjs ml-3">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.PrecioCompra)</th>
                                <th>@Html.DisplayNameFor(model => model.PrecioUnitario)</th>
                                <th>@Html.DisplayNameFor(model => model.PrecioMayorista)</th>
                                <th>@Html.DisplayNameFor(model => model.CantidadStock)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaVencimiento)</th>
                                <th>@Html.DisplayNameFor(model => model.PaisOrigen)</th>
                                <th>@Html.DisplayNameFor(model => model.UnidadMedida)</th>
                                <th>@Html.DisplayNameFor(model => model.IdProveedor)</th>
                                <th>@Html.DisplayNameFor(model => model.IdCategoria)</th>
                                <th>@Html.DisplayNameFor(model => model.IdMarca)</th>
                                <th colspan="3">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-page="@numPage">
                                    <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PrecioCompra)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PrecioUnitario)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PrecioMayorista)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CantidadStock)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaIngreso)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaVencimiento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PaisOrigen)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UnidadMedida)</td>
                                    <td>@proveedores.FirstOrDefault(u => u.IdProveedor == item.IdProveedor)?.Nombre</td>
                                    <td>@categorias.FirstOrDefault(u => u.IdCategoria == item.IdCategoria)?.Nombre</td>
                                    <td>@marcas.FirstOrDefault(u => u.IdMarca == item.IdMarca)?.Nombre</td>
                                    <td class="botonestabla">
                                        <button type="button" class="btn btn-primary" style="background-color: #264DA0; color: white" onclick="window.location.href='@Url.Action("Edit", new { IdProducto = item.IdProducto })'">
                                            <i class="fas fa-pencil-alt"></i> Modificar
                                        </button>
                                    </td>
                                    <td class="botonestabla">
                                        <button type="button" class="btn btn-info" onclick="window.location.href='@Url.Action("Details", new { IdProducto = item.IdProducto })'">
                                            <i class="fas fa-eye"></i> Detalles
                                        </button>
                                    </td>
                                    <td class="botonestabla">
                                        <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Delete", new { IdProducto = item.IdProducto })'">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </button>
                                    </td>
                                </tr>
                                numRegistros++;
                                if (numRegistros == numRegistrosPorPage)
                                {
                                    numPage++;
                                    numRegistros = 0;
                                }
                            }
                            @{
                                if (numRegistros == 0)
                                {
                                    numPage--;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @if (numPage > 1)
        {
            <div class="row mt-3" style="overflow:auto">
                <div class="col-md-12">
                    <ul class="pagination paginationjs" data-numpage="@numPage" data-pageactive="1">
                        <li class="page-item" data-typepage="Previous"><a class="page-link" href="#">Previous</a></li>
                        @for (var i = 1; i <= numPage; i++)
                        {
                            <li class="page-item" data-page="@i" data-typepage="Item"><a class="page-link" href="#">@i</a></li>
                        }
                        <li class="page-item" data-typepage="Next"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
