@model SysInventarioFacturacionAgro.EntidadesDeNegocio.Factura

@{
    ViewData["Title"] = "Create";
    List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Usuario> usuarios = ViewBag.Usuarios as List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Usuario>;
}

<h1>Crear Factura</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NumeroFactura" class="control-label"></label>
                <input asp-for="NumeroFactura" class="form-control" />
                <span asp-validation-for="NumeroFactura" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFacturacion" class="control-label"></label>
                <input asp-for="FechaFacturacion" class="form-control" />
                <span asp-validation-for="FechaFacturacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FormaPago" class="control-label"></label>
                <input asp-for="FormaPago" class="form-control" />
                <span asp-validation-for="FormaPago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descuento" class="control-label"></label>
                <input asp-for="Descuento" class="form-control" />
                <span asp-validation-for="Descuento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Impuesto" class="control-label"></label>
                <input asp-for="Impuesto" class="form-control" />
                <span asp-validation-for="Impuesto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FacturaTotal" class="control-label"></label>
                <input asp-for="FacturaTotal" class="form-control" />
                <span asp-validation-for="FacturaTotal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FacturaPagado" class="control-label"></label>
                <input asp-for="FacturaPagado" class="form-control" />
                <span asp-validation-for="FacturaPagado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FacturaCambio" class="control-label"></label>
                <input asp-for="FacturaCambio" class="form-control" />
                <span asp-validation-for="FacturaCambio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label"></label>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DireccionCliente" class="control-label"></label>
                <input asp-for="DireccionCliente" class="form-control" />
                <span asp-validation-for="DireccionCliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TelefonoCliente" class="control-label"></label>
                <input asp-for="TelefonoCliente" class="form-control" />
                <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DUICliente" class="control-label"></label>
                <input asp-for="DUICliente" class="form-control" />
                <span asp-validation-for="DUICliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <select asp-for="IdUsuario" class="form-control">
                    <option selected value="">SELECCIONAR</option>
                    @foreach (var item in usuarios)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <button type="submit" class="btn btn-success" style="margin-right: 10px;">
                    <i class="fas fa-save"></i> Guardar
                </button>

                <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index")'" style="margin-left: 10px;">
                    <i class="fas fa-times"></i> Cancelar
                </button>
            </div>

            <span class="text-danger">@ViewBag.Error</span>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
