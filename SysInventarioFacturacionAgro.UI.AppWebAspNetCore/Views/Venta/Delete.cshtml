@model SysInventarioFacturacionAgro.EntidadesDeNegocio.Venta

@{
    ViewData["Title"] = "Delete";
    List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Usuario> usuarios = ViewBag.Usuarios as List<SysInventarioFacturacionAgro.EntidadesDeNegocio.Usuario>;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="m-0 font-weight-bold text-primary" style="font-size: 1.5rem;">Eliminar Venta</h1>
    </div>
    <div class="card-body">
        <form asp-action="Delete" class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVenta" class="form-control" />

            <dl class="row">
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NumeroVenta" class="control-label">Número de Venta</label>
                        <input asp-for="NumeroVenta" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FechaVenta" class="control-label">Fecha de Venta</label>
                        <input asp-for="FechaVenta" type="date" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NombreCliente" class="control-label">Nombre del Cliente</label>
                        <input asp-for="NombreCliente" class="form-control" readonly />
                    </div>
                </dt>
                <!-- Agrega más campos aquí según tu modelo -->
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DireccionCliente" class="control-label">Dirección del Cliente</label>
                        <input asp-for="DireccionCliente" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="TelefonoCliente" class="control-label">Teléfono del Cliente</label>
                        <input asp-for="TelefonoCliente" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DUICliente" class="control-label">DUI del Cliente</label>
                        <input asp-for="DUICliente" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FormaPago" class="control-label">Forma de Pago</label>
                        <input asp-for="FormaPago" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Total" class="control-label">Total</label>
                        <input asp-for="Total" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Descuento" class="control-label">Descuento</label>
                        <input asp-for="Descuento" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Impuesto" class="control-label">Impuesto</label>
                        <input asp-for="Impuesto" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="TotalPagado" class="control-label">Total Pagado</label>
                        <input asp-for="TotalPagado" class="form-control" readonly />
                    </div>
                </dt>
                <dt class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IdUsuario" class="control-label">Usuario</label>
                        <input asp-for="Usuario.Nombre" class="form-control" readonly />
                    </div>
                </dt>
            </dl>

            <!-- Botones -->
            <div class="form-group" style="margin-top: 10px;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar?');" style="margin-right: 10px;">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                <a class="btn btn-secondary" asp-action="Index" style="margin-left: 10px;">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <span class="text-danger">@ViewBag.Error</span>
            </div>
        </form>
    </div>
</div>
