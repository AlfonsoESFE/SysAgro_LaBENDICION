<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agroservicio La Bendicion del Agricultor</title>
    <!--    https://fontawesome.com/   -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.19.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Incluye jQuery desde el CDN de Google -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @*Link para iconos*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-......" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Home.css">
    <link rel="stylesheet" href="~/css/Menu.css">
    <link rel="stylesheet" href="~/css/Inicio.css">
    <link rel="stylesheet" href="~/css/Venta.css">
   

</head>

<body>
    <header>
        <label class="labelMenu"><i class="fa fa-bars"></i></label>
    </header>
    <header>
        @{
            string? nombre = User.Identity.Name;
            int? Idu = global.idu;

        }


    </header>
    <div class="menu">
        <h1><i class="fa fa-address-card"></i></h1>
        <nav>
            <ul>
                <div class="logo-container">
                    <!-- Aquí puedes agregar el código o la imagen del logotipo de tu empresa -->
                    <!-- Por ejemplo, si es una imagen: -->
                    <img src="~/IMG/ZeroStresLogo.png" alt="Logo de la empresa" class="logo-container">
                </div>

                <li class="Nombre">
                    <a class="dashboard-nav-dropdown-item-nombre">Bienvenido @nombre </a>
                  
                </li>

                @if (User.IsInRole("SuperAdmin"))
                {
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                    </li>

                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Rol" asp-action="Index">Rol</a>
                    </li>

                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Producto" asp-action="Index">Producto</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Producto" asp-action="Inventario">Inventario</a>
                    </li>

                    <li class="nav-item">
                        <a class="dashboard-nav-item" asp-area="" asp-controller="Categoria" asp-action="Index">Categoria</a>
                    </li>
                     <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Factura" asp-action="Index">Factura</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Proveedor" asp-action="Index">Proveedor</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="DetalleFactura" asp-action="Index">DetalleFactura</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="DetalleFactura" asp-action="Venta">Venta</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="DetalleFactura" asp-action="Reportes">Reportes</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Pedido" asp-action="Index">Pedido</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="DetallePedido" asp-action="Index">DetallePedido</a>
                    </li>

                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Usuario" asp-action="CambiarPassword">Cambiar password</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-item" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar sesión</a>
                    </li>


                }
                else
                {
                    <li class="nav-item">
                        <a class="dashboard-nav-item" asp-area="" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar sesión</a>
                    </li>
                }
                @if (User.IsInRole("Cajero"))
                {
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="DetalleFactura" asp-action="Venta">Venta</a>
                    </li>
                    
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="DetalleFactura" asp-action="Venta">Venta</a>
                    </li>
                    <li class="nav-item">
                        <a class="dashboard-nav-dropdown-item" asp-area="" asp-controller="Producto" asp-action="Inventario">Inventario</a>
                    </li>
                }
            </ul>
           
                
        </nav>
    </div>
    <div class="opacMenu"></div>

    <!--  Jquery  -->
    <div class='dashboard-content'>
        <div class='dashboard-app'>
            <div class='container'>
                <main role="main" class="pb-2">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Send message</button>
                </div>
            </div>
        </div>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Inicio.js"></script>
    <script src="~/js/Venta.js"></script>
    <script src="~/js/Menu.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/JavaScriptHome.js" asp-append-version="true"></script>
 
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>