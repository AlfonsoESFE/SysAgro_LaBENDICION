@model SysInventarioFacturacionAgro.EntidadesDeNegocio.Categoria

@{
    ViewData["Title"] = "Details";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="m-0 font-weight-bold text-primary" style="font-size: 1.5rem;">Detalles Categoría</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div class="form-group">
                        <label asp-for="Codigo" class="control-label">Código</label>
                        <input asp-for="Codigo" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" disabled />
                    </div>
                </form>
            </div>
        </div>
        @* BOTONES DE DETALLE DE CATEGORÍA *@
        <div class="botonestabla">
            <a class="btn btn-success" style="background-color: #264DA0; color: white; margin-right: 10px;" href="@Url.Action("Edit", new { IdCategoria = Model.IdCategoria })">
                <i class="fas fa-pencil-alt"></i> Ir a Modificar
            </a>

            <a class="btn btn-danger" href="@Url.Action("Index")" style="margin-left: 10px;">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </div>

</div>


